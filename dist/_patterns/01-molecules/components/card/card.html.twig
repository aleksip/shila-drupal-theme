{% set classes = 'card' %}
{% if additional_classes is iterable %}
  {% set classes = [classes]|merge(additional_classes)|join(' ') %}
{% endif %}
<section class="{{ classes }}">
  {% spaceless %}
    <div class="card__image">
      {{ image }}
    </div>
  {% endspaceless %}
  <div class="card__body">
    {% if title %}
      {% spaceless %}
        <h1 class="card__title">
          {% if link_url %}
            <a href="{{ link_url }}">
          {% endif %}
          {{ title }}
          {% if link_url %}
            </a>
          {% endif %}
        </h1>
      {% endspaceless %}
    {% endif %}
    {% block content %}
      {{ content }}
    {% endblock %}
    {% if link_url and link_text %}
      <p class="card__link"><a href="{{ link_url }}">{{ link_text }}</a></p>
    {% endif %}
  </div>
</section>
